---
import { getLangFromUrl } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const currentYear = new Date().getFullYear();

const content = {
  fr: {
    tagline: 'Développeur Web passionné basé au Mans.',
    nav: 'Navigation',
    rights: 'Tous droits réservés',
    madeWith: 'Fait avec',
    inFrance: 'en France',
  },
  en: {
    tagline: 'Passionate Web Developer based in Le Mans.',
    nav: 'Navigation',
    rights: 'All rights reserved',
    madeWith: 'Made with',
    inFrance: 'in France',
  },
};

const t = content[lang];

const navLinks = [
  { href: `/${lang}/`, label: lang === 'fr' ? 'Accueil' : 'Home' },
  { href: `/${lang}/${lang === 'fr' ? 'a-propos' : 'about'}`, label: lang === 'fr' ? 'À propos' : 'About' },
  { href: `/${lang}/${lang === 'fr' ? 'parcours' : 'journey'}`, label: lang === 'fr' ? 'Parcours' : 'Journey' },
  { href: `/${lang}/${lang === 'fr' ? 'projets' : 'projects'}`, label: lang === 'fr' ? 'Projets' : 'Projects' },
  { href: `/${lang}/distinctions`, label: 'Distinctions' },
  { href: `/${lang}/blog`, label: 'Blog' },
];

const socialLinks = [
  { href: 'https://github.com/roseratugo', label: 'GitHub' },
  { href: 'https://www.linkedin.com/in/ugo-roserat/', label: 'LinkedIn' },
];
---

<footer class="footer">
  <div class="footer-main">
    <div class="footer-grid">
      <!-- Brand -->
      <div class="footer-brand">
        <a href={`/${lang}/`} class="footer-logo">
          Ugo<span class="accent">.</span>Roserat
        </a>
        <p class="footer-tagline">
          {t.tagline}
        </p>
        <div class="footer-socials">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="footer-social-link"
              aria-label={link.label}
            >
              {link.label === 'GitHub' ? (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                </svg>
              ) : (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation -->
      <div class="footer-nav">
        <h4 class="footer-title">{t.nav}</h4>
        <nav>
          {navLinks.map((link) => (
            <a href={link.href} class="footer-link">{link.label}</a>
          ))}
        </nav>
      </div>

      <!-- Contact -->
      <div class="footer-contact">
        <h4 class="footer-title">Contact</h4>
        <p class="footer-text">Le Mans, France</p>
        <a href="mailto:roserat.ugo@gmail.com" class="footer-link">
            roserat.ugo@gmail.com
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="footer-bottom">
    <p class="footer-copyright">
      &copy; {currentYear} Ugo Roserat. {t.rights}.
    </p>
    <p class="footer-copyright">
      {t.madeWith} <span class="heart">❤️</span> {t.inFrance}
    </p>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-ink);
    color: var(--color-paper);
  }

  .footer-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }

  @media (min-width: 768px) {
    .footer-main {
      padding: 6rem 3rem;
    }
  }

  .footer-grid {
    display: grid;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr;
      gap: 4rem;
    }
  }

  .footer-brand {
    max-width: 320px;
  }

  .footer-logo {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-paper);
    margin-bottom: 1.5rem;
  }

  .accent {
    color: var(--color-accent);
  }

  .footer-tagline {
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .footer-socials {
    display: flex;
    gap: 1rem;
  }

  .footer-social-link {
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-paper);
    transition: all 0.3s ease;
  }

  .footer-social-link:hover {
    background-color: var(--color-paper);
    color: var(--color-ink);
  }

  .footer-title {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
  }

  .footer-nav nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--color-paper);
  }

  .footer-text {
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.75rem;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      padding: 1.5rem 3rem;
    }
  }

  .footer-copyright {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }
</style>
