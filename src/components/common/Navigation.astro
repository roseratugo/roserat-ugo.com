---
import { getLangFromUrl } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);

const navItems = [
  { href: `/${lang}/${lang === 'fr' ? 'a-propos' : 'about'}`, label: lang === 'fr' ? 'Ã€ propos' : 'About' },
  { href: `/${lang}/${lang === 'fr' ? 'parcours' : 'journey'}`, label: lang === 'fr' ? 'Parcours' : 'Journey' },
  { href: `/${lang}/${lang === 'fr' ? 'projets' : 'projects'}`, label: lang === 'fr' ? 'Projets' : 'Projects' },
  { href: `/${lang}/distinctions`, label: 'Distinctions' },
  { href: `/${lang}/blog`, label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<nav class="nav">
  {navItems.map((item, i) => {
    const isActive = currentPath === item.href || currentPath === item.href + '/';
    return (
      <a
        href={item.href}
        class:list={['nav-link', isActive && 'active']}
        style={`--i: ${i}`}
      >
        <span class="nav-text">{item.label}</span>
        <span class="nav-line"></span>
      </a>
    );
  })}
</nav>

<style>
  .nav {
    display: flex;
    align-items: center;
    gap: 1.75rem;
  }

  .nav-link {
    position: relative;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-paper);
    padding: 0.5rem 0;
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    opacity: 1;
  }

  .nav-text {
    display: inline-block;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .nav-link:hover .nav-text {
    transform: translateY(-2px);
    color: var(--nav-accent, var(--color-accent));
  }

  .nav-link.active .nav-text {
    color: var(--nav-accent, var(--color-accent));
  }

  .nav-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--nav-accent, var(--color-accent)), var(--nav-accent-light, var(--color-accent-light)));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .nav-link:hover .nav-line,
  .nav-link.active .nav-line {
    transform: scaleX(1);
  }
</style>
