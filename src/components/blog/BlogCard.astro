---
import type { Lang } from '../../i18n/utils';

interface Props {
  post: {
    id: string;
    data: {
      title: string;
      description: string;
      pubDate: Date;
      tags: string[];
      lang: 'fr' | 'en';
    };
  };
  lang: Lang;
}

const { post, lang } = Astro.props;
const { data } = post;

const postUrl = `/${lang}/blog/${post.id.replace(`${data.lang}/`, '')}`;

const formattedDate = data.pubDate.toLocaleDateString(
  lang === 'fr' ? 'fr-FR' : 'en-US',
  { year: 'numeric', month: 'long', day: 'numeric' }
);
---

<article class="blog-card" data-cursor-view>
  <a href={postUrl} class="card-link">
    <div class="card-inner">
      <!-- Hover indicator -->
      <div class="card-indicator"></div>

      <!-- Date -->
      <time datetime={data.pubDate.toISOString()} class="card-date">
        <span class="date-dot"></span>
        {formattedDate}
      </time>

      <!-- Title -->
      <h3 class="card-title">
        <span class="title-text">{data.title}</span>
      </h3>

      <!-- Description -->
      <p class="card-desc">{data.description}</p>

      <!-- Tags -->
      {data.tags.length > 0 && (
        <div class="tags-list">
          {data.tags.slice(0, 3).map((tag, i) => (
            <span class="tag" style={`--tag-index: ${i}`}>{tag}</span>
          ))}
        </div>
      )}

      <!-- Read more -->
      <span class="read-more">
        <span class="read-more-text">{lang === 'fr' ? 'Lire la suite' : 'Read more'}</span>
        <span class="read-more-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" width="14" height="14">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </span>
      </span>
    </div>
  </a>
</article>

<style>
  .blog-card {
    padding: 2rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    position: relative;
  }

  .blog-card:first-child {
    padding-top: 0;
  }

  .blog-card:last-child {
    border-bottom: none;
  }

  .card-link {
    display: block;
    text-decoration: none;
  }

  .card-inner {
    position: relative;
    padding-left: 1.5rem;
    transition: padding-left 0.3s ease;
  }

  .blog-card:hover .card-inner {
    padding-left: 2rem;
  }

  .card-indicator {
    position: absolute;
    left: 0;
    top: 0;
    width: 3px;
    height: 0;
    background: linear-gradient(180deg, var(--color-accent) 0%, color-mix(in srgb, var(--color-accent) 30%, transparent) 100%);
    transition: height 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .blog-card:hover .card-indicator {
    height: 100%;
  }

  .card-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-ink-muted);
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }

  .date-dot {
    width: 6px;
    height: 6px;
    background-color: var(--color-accent);
    border-radius: 50%;
    opacity: 0;
    transform: scale(0);
    transition: all 0.3s ease;
  }

  .blog-card:hover .date-dot {
    opacity: 1;
    transform: scale(1);
  }

  .blog-card:hover .card-date {
    color: var(--color-accent);
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--color-ink);
    line-height: 1.3;
    margin-bottom: 0.75rem;
    overflow: hidden;
  }

  .title-text {
    display: inline-block;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .blog-card:hover .title-text {
    color: var(--color-accent);
    transform: translateX(4px);
  }

  .card-desc {
    font-size: 1rem;
    color: var(--color-ink-light);
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.3s ease;
  }

  .blog-card:hover .card-desc {
    color: var(--color-ink);
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: color-mix(in srgb, var(--color-accent) 10%, transparent);
    color: var(--color-accent);
    transition: all 0.3s ease;
    transition-delay: calc(var(--tag-index) * 50ms);
  }

  .blog-card:hover .tag {
    background-color: var(--color-accent);
    color: #ffffff;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    overflow: hidden;
  }

  .read-more-text {
    transition: transform 0.3s ease;
  }

  .read-more-arrow {
    display: flex;
    align-items: center;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .read-more-text {
    transform: translateX(-4px);
  }

  .blog-card:hover .read-more-arrow {
    transform: translateX(4px);
  }
</style>
