---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects', ({ data }) => {
    return data.lang === 'fr';
  });

  return projects.map((project) => ({
    params: { slug: project.id.replace('fr/', '') },
    props: { project },
  }));
}

const { project } = Astro.props;
const { data } = project;
const { Content } = await render(project);
---

<BaseLayout title={data.title} description={data.description} type="article">
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <a href="/fr/projets" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="16" height="16">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        Retour aux projets
      </a>

      {data.featured && (
        <span class="badge-featured">Projet phare</span>
      )}

      <h1 class="page-title">{data.title}</h1>
      <p class="page-intro">{data.description}</p>

      <!-- Technologies -->
      <div class="tech-list">
        {data.technologies.map((tech) => (
          <span class="tech-tag">{tech}</span>
        ))}
      </div>

      <!-- Links -->
      <div class="hero-links">
        {data.liveUrl && (
          <a href={data.liveUrl} target="_blank" rel="noopener noreferrer" class="btn-primary">
            Voir en ligne
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="16" height="16">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
          </a>
        )}
        {data.repoUrl && (
          <a href={data.repoUrl} target="_blank" rel="noopener noreferrer" class="btn-secondary">
            Voir le code
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
            </svg>
          </a>
        )}
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="page-content">
    <div class="container">
      <!-- Thumbnail -->
      <div class="project-image">
        <Image
          src={data.thumbnail}
          alt={data.title}
          class="thumbnail"
          widths={[800, 1200]}
          sizes="(max-width: 768px) 100vw, 800px"
        />
      </div>

      <!-- Article content -->
      <div class="prose">
        <Content />
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background-color: var(--color-ink);
    color: #ffffff;
    padding: 8rem 1.5rem 5rem;
  }

  @media (min-width: 768px) {
    .page-hero {
      padding: 10rem 3rem 6rem;
    }
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #ffffff;
  }

  .badge-featured {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-accent);
    color: #ffffff;
    margin-bottom: 1rem;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .page-intro {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .tech-tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.375rem 0.75rem;
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.8);
  }

  .hero-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: var(--color-accent);
    color: #ffffff;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: background-color 0.2s ease;
  }

  .btn-primary:hover {
    background-color: var(--color-accent-dark);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: background-color 0.2s ease;
  }

  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .page-content {
    padding: 5rem 1.5rem;
  }

  @media (min-width: 768px) {
    .page-content {
      padding: 6rem 3rem;
    }
  }

  .project-image {
    margin-bottom: 3rem;
    overflow: hidden;
  }

  .thumbnail {
    width: 100%;
    height: auto;
  }

  .prose {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-ink-light);
  }

  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-ink);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose :global(h3) {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-ink);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    text-decoration: none;
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    padding: 0.125rem 0.375rem;
    background-color: var(--color-paper-warm);
    border-radius: 2px;
  }

  .prose :global(pre) {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    padding: 1.5rem;
    background-color: var(--color-ink);
    color: rgba(255, 255, 255, 0.9);
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .prose :global(pre code) {
    padding: 0;
    background: none;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: 1.5rem;
    font-style: italic;
    color: var(--color-ink-muted);
    margin-bottom: 1.5rem;
  }

  .prose :global(img) {
    width: 100%;
    height: auto;
    margin: 2rem 0;
  }
</style>
